local function makePlayerLookAround(player)
    local character = player.Character
    if not character then
        return
    end

    while true do
        for angle = 0, math.pi * 2, 0.1 do
            local newLookVector = Vector3.new(math.cos(angle), 0, math.sin(angle))
            local newCFrame = CFrame.new(character.HumanoidRootPart.Position, character.HumanoidRootPart.Position + newLookVector)
            character:SetPrimaryPartCFrame(newCFrame)
            wait(0)
        end
    end
end

local player = game.Players.LocalPlayer
makePlayerLookAround(player)
