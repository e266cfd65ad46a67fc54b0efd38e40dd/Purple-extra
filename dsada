        local ScreenGui = Instance.new("ScreenGui")
        local Frame = Instance.new("Frame")
        local UIGradient = Instance.new("UIGradient")
        
        ScreenGui.ResetOnSpawn = true
        
        ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
        Frame.Parent = ScreenGui
        Frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255) 
        Frame.BackgroundTransparency = 0
        Frame.BorderColor3 = Color3.fromRGB(0, 0, 0)
        Frame.BorderSizePixel = 0
        Frame.Position = UDim2.new(0, 10, 1, -45) 
        Frame.Size = UDim2.new(0, 380, 0, 35)
        
        local function cgo(frame)
          local outline = Instance.new("Frame")
          outline.BorderSizePixel = 0
          outline.BackgroundTransparency = 0
          outline.Size = UDim2.new(1, 0, 1, 0)
          outline.BackgroundColor3 = Color3.new(1, 1, 1)
          outline.Parent = frame

          local gradient = UIGradient:Clone()
          gradient.Color = ColorSequence.new{
            ColorSequenceKeypoint.new(0, Color3.fromRGB(106, 90, 205)), 
            ColorSequenceKeypoint.new(1, Color3.fromRGB(138, 43, 226))
          }
          gradient.Parent = outline
        
          return gradient
        end
        
        local gradient = cgo(Frame)
        
        local function ag(gradient)
          local colors = {
            Color3.fromRGB(106, 90, 205),
            Color3.fromRGB(138, 43, 226)  
          }
          local colorIndex = 1
        
          while true do
            local currentColor = colors[colorIndex]
            local nextColorIndex = colorIndex % #colors + 1
            local nextColor = colors[nextColorIndex]

            for t = 0, 1, 0.01 do
              local lerpedColor = currentColor:Lerp(nextColor, t)
              gradient.Color = ColorSequence.new(lerpedColor)
              wait(0.08) 
            end

            colorIndex = nextColorIndex
          end
        end
        
        local TextLabel = Instance.new("TextLabel")
        TextLabel.Parent = Frame
        TextLabel.Size = UDim2.new(1, 0, 1, 0) 
        TextLabel.BackgroundTransparency = 1
        TextLabel.Text = "Purple theme V3.0"
        TextLabel.TextColor3 = Color3.fromRGB(201, 160, 255)
        TextLabel.Font = Enum.Font.SourceSansBold 
        TextLabel.TextSize = 24
        
        ag(gradient)
